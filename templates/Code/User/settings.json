{
  "workbench.colorCustomizations": {
    "statusBar.background": "{{base01}}",
    "terminal.foreground": "{{base06}}",
    "terminal.ansiBrightBlack": "{{base02}}",
    "terminal.ansiBrightCyan": "{{base0C}}",
    "terminal.ansiBrightGreen": "{{base0B}}",
    "terminal.ansiBrightMagenta": "{{base0E}}",
    "terminal.ansiBrightRed": "{{base08}}",
    "terminal.ansiBrightWhite": "{{base07}}",
    "terminal.ansiBrightYellow": "{{base0A}}",
    "terminal.ansiBrightBlue": "{{base0C}}",
    "terminal.ansiBlack": "{{base00}}",
    "terminal.ansiCyan": "{{base0D}}",
    "terminal.ansiGreen": "{{base0B}}",
    "terminal.ansiMagenta": "{{base0E}}",
    "terminal.ansiRed": "{{base08}}",
    "terminal.ansiWhite": "{{base06}}",
    "terminal.ansiYellow": "{{base0A}}",
    "terminal.ansiBlue": "{{base0C}}",
    "gitDecoration.untrackedResourceForeground": "{{base09}}",
    "list.errorForeground": "{{base08}}",
    "list.warningForeground": "{{base0A}}",
    "gitDecoration.ignoredResourceForeground": "{{base03}}",
    "gitDecoration.modifiedResourceForeground": "{{base0D}}",
    "gitDecoration.stageModifiedResourceForeground": "{{base0B}}",
    "gitDecoration.submoduleResourceForeground": "{{base04}}"
  },
  "editor.semanticTokenColorCustomizations": {
    "[*]": {
      "enabled": true,
      "rules": {
        "class.declaration": "{{base08}}",
        "method.declaration": "{{base08}}",
        "function.declaration": "{{base08}}",
        "selfParameter": "{{base0C}}"
      }
    }
  },
  "editor.tokenColorCustomizations": {
    "[*]": {
      "textMateRules": [
        {
          "scope": "keyword.operator.comparison.python",
          "settings": {
            "fontStyle": "bold"
          }
        },
        {
          "scope": "keyword.operator.logical.python",
          "settings": {
            "fontStyle": "italic bold"
          }
        },
        {
          "scope": "entity.name.type.class",
          "settings": {
            "foreground": "{{base06}}"
          }
        },
        {
          "scope": "entity.name.namespace",
          "settings": {
            "foreground": "{{base06}}"
          }
        },
        {
          "scope": "meta.function.decorator.python",
          "settings": {
            "foreground": "{{base0F}}"
          }
        },
        {
          "scope": "punctuation.definition.decorator.python",
          "settings": {
            "foreground": "{{base0F}}"
          }
        },
        {
          "scope": "string.quoted.docstring.multi.python",
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "scope": "meta.function.decorator.python",
          "settings": {
            "fontStyle": "italic"
          }
        }
      ]
    }
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "window.titleBarStyle": "custom",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.inheritEnv": true,
  "editor.fontFamily": "'JetBrainsMono', 'Sauce Code Pro Nerd Font', 'MesloLGS NF', 'Iosevka Extended', 'DejaVu Sans Mono', 'Droid Sans Mono', 'monospace', 'Droid Sans Fallback'",
  "terminal.integrated.fontFamily": "'JetBrainsMono', 'Sauce Code Pro Nerd Font', 'MesloLGS NF', 'Iosevka Extended', 'DejaVu Sans Mono', 'Droid Sans Mono', 'monospace', 'Droid Sans Fallback'",
  "editor.formatOnPaste": false,
  "editor.rulers": [
    100,
    120
  ],
  "terminal.integrated.allowChords": false,
  "workbench.colorTheme": "GitHub Dark",
  "go.toolsManagement.autoUpdate": true,
  "terminal.integrated.env.linux": {
    "EDITOR": "code",
    "VISUAL": "code",
    "PATH": "${env:HOME}/.local/bin/:${env:PATH}",
  },
  "python.languageServer": "Default",
  "python.envFile": "${workspaceFolder}/.env",
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "-vvv"
  ],
  "isort.args": [
    "-w",
    "99"
  ],
  "pylint.args": [
    "--disable",
    "C0115,C0301,C0114,W0611,E0401",
    "--msg-template={msg_id}:{line:3d},{column}: {obj}: {msg}"
  ],
  "flake8.args": [
    "--extend-ignore=W503",
    "--format='pylint'"
  ],
  "Lua.diagnostics.globals": [
    "vim"
  ],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.rulers": [
      100,
      120
    ],
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.formatOnSave": "explicit"
    }
  },
  "yaml.completion": true,
  "yaml.schemas": {
    "kubernetes": [
      "templates/*.yaml",
      "*.tpl"
    ]
  },
  "[git-commit]": {
    "editor.rulers": [
      50,
      72
    ]
  },
  "git.inputValidationSubjectLength": 50,
  "git.inputValidationLength": 72,
  "workbench.editorAssociations": {
    "viewType": "default",
    "filenamePattern": "default"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/bob/*/**": true,
    "**/.bob/*/**": true,
    "**/.idea/*/**": true,
    "**/.vscode/*/**": true,
  },
  "git.ignoredRepositories": [
    "bob"
  ],
  "git.detectSubmodules": false,
  "git.autoRepositoryDetection": "openEditors",
  "python.analysis.completeFunctionParens": true,
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  },
  "Lua.workspace.library": [
    "/usr/share/awesome/lib",
    "~/.local/share/nvim/lazy/",
    "/usr/local/share/nvim/runtime/lua/"
  ],
  "files.trimTrailingWhitespace": true,
  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "disabled"
  },
  "editor.stickyScroll.enabled": true,
  "editor.stickyTabStops": true,
  "editor.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "telemetry.telemetryLevel": "off",
  "explorer.confirmDelete": false,
  "search.showLineNumbers": true,
  "search.smartCase": true,
  "files.autoSave": "onFocusChange",
  "go.useLanguageServer": true,
  "[go]": {
    "editor.snippetSuggestions": "inline",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "gopls": {
    "ui.completion.usePlaceholders": true,
    "completeUnimported": true,
    "buildFlags": [
      "-tags",
      "mage"
    ],
    "formatting.gofumpt": true,
  },
  "go.lintOnSave": "package",
  "gitlens.advanced.messages": {
    "suppressFileNotUnderSourceControlWarning": true
  },
  "editor.inlineSuggest.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  "todohighlight.keywords": [
    {
      "text": "\"severity\": \"error\"",
      "backgroundColor": "",
      "color": "{{base08}}"
    },
    {
      "text": "\"severity\": \"warn\"",
      "backgroundColor": "",
      "color": "{{base0A}}"
    },
    {
      "text": "\"severity\": \"error\"",
      "backgroundColor": "",
      "color": "{{base08}}"
    },
    {
      "text": "\"severity\": \"warn\"",
      "backgroundColor": "",
      "color": "{{base0A}}"
    },
  ],
  "files.associations": {
    "*.txt": "jsonl"
  },
  "git.openRepositoryInParentFolders": "never",
  "workbench.startupEditor": "none",
  "window.menuBarVisibility": "compact",
  "editor.codeActionsOnSave": {},
  "editor.minimap.showSlider": "always",
  "editor.fontSize": 15,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "debug.console.fontFamily": "JetbrainsMono",
  "debug.console.fontSize": 15,
  "debug.console.lineHeight": 21,
  "go.coverageOptions": "showCoveredCodeOnly",
  "go.showWelcome": false,
  "go.editorContextMenuCommands": {
    "fillStruct": true,
    "testPackage": true,
    "playground": false
  },
  "go.delveConfig": {
    "dlvLoadConfig": {
      "followPointers": true,
      "maxVariableRecurse": 1,
      "maxStringLen": 10000,
      "maxArrayValues": 10000,
      "maxStructFields": -1
    }
  },
  "gitlens.autolinks": [
    {
      "prefix": "ADPPRG-",
      "url": "https://eteamproject.internal.ericsson.com/browse/ADPPRG-<num>"
    },
    {
      "prefix": "Change-Id: "
    }
  ],
  "editor.formatOnSaveMode": "modifications",
  "terminal.integrated.scrollback": 30000,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?."
}
