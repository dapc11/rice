{
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "terminal.external.linuxExec": "{{terminal}}",
    "terminal.integrated.defaultProfile.linux": "{{shell}}",
    "window.titleBarStyle": "custom",
    "workbench.iconTheme": "vs-minimal",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.inheritEnv": true,
    "editor.fontFamily": "'{{font}}', 'DejaVu Sans Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 13,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.suggestSelection": "first",
    "editor.rulers": [
        100,
        120
    ],
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.allowChords": false,
    "workbench.colorTheme": "Monokai Dimmed",
    "go.toolsManagement.autoUpdate": true,
    "terminal.integrated.env.linux": {
        "EDITOR": "vim",
        "VISUAL": "vim",
        "PATH": "${env:HOME}/.local/bin/:${env:PATH}",
    },
    "python.languageServer": "Microsoft",
    "python.pythonPath": "${env:HOME}/dev/bin/python3",
    "python.pipenvPath": "${env:HOME}/dev/bin/pip3.6",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintCategorySeverity.warning": "Error",
    "python.linting.pylintUseMinimalCheckers": false,
    "python.formatting.provider": "yapf",
    "python.autoComplete.addBrackets": true,
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "99",
        "--experimental"
    ],
    "[python]": {
        "editor.rulers": [
            100,
            120
        ],
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "colorize.languages": [
        "json",
        "vim"
    ],
    "[git-commit]": {
        "editor.rulers": [
            50
        ]
    },
    "workbench.editorAssociations": {
        "viewType": "jupyter.notebook.ipynb",
        "filenamePattern": "*.ipynb"
    },
    "workbench.colorCustomizations": {
        "terminal.foreground": "{{base06}}",
        "terminal.ansiBrightBlack": "{{base02}}",
        "terminal.ansiBrightCyan": "{{base0C}}",
        "terminal.ansiBrightGreen": "{{base0F}}",
        "terminal.ansiBrightMagenta": "{{base0E}}",
        "terminal.ansiBrightRed": "{{base08}}",
        "terminal.ansiBrightWhite": "{{base07}}",
        "terminal.ansiBrightYellow": "{{base0A}}",
        "terminal.ansiBrightBlue": "{{base0C}}",
        "terminal.ansiBlack": "{{base00}}",
        "terminal.ansiCyan": "{{base0D}}",
        "terminal.ansiGreen": "{{base0B}}",
        "terminal.ansiMagenta": "{{base09}}",
        "terminal.ansiRed": "{{base08}}",
        "terminal.ansiWhite": "{{base06}}",
        "terminal.ansiYellow": "{{base0A}}",
        "terminal.ansiBlue": "{{base0C}}",
    },
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "d",
                "d"
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        {
            "before": [
                "<C-w>"
            ],
            "after": [
                "v",
                "i",
                "\""
            ]
        },
        {
            "before": [
                "<leader>",
                "q"
            ],
            "commands": [
                ":bd"
            ]
        },
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-k>": false,
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/bob/*/**": true,
        "**/.bob/*/**": true,
        "**/.idea/*/**": true,
        "**/.vscode/*/**": true,
    }
}