set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

floating_modifier $mod
hide_edge_borders smart
font pango:{{font}} 11

exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec --no-startup-id dunst -config ~/.config/dunst/dunstrc
# exec_always --no-startup-id ~/.config/polybar/startup.sh -k $HOME/.config/polybar/config top

bar {
  # i3bar_command $HOME/.config/polybar/startup.sh
  status_command i3status
  font pango:{{font}} 11
  position top

  # Disable changing workspace with mouse scroll
  bindsym button4 nop
  bindsym button5 nop

  colors {
    background {{base01}}
    statusline {{base06}}
    separator {{base03}}

    focused_workspace  {{base0D}} {{base01}} {{base0D}}
    active_workspace   {{base01}} {{base01}} {{base0D}}
    inactive_workspace {{base01}} {{base01}} {{base0D}}
    urgent_workspace   {{base01}} {{base01}} {{base08}}
    binding_mode       {{base01}} {{base01}} {{base09}}
  }
}

